<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.stang.customview.MainActivity">

    <com.stang.customview.MyView
            android:id="@+id/v1"
            android:layout_marginBottom="10dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="10dp"
            android:layout_gravity="center"
            custom:line_color="@android:color/holo_green_dark"
            custom:line_width="3px"
            custom:speed_animation="110"
            custom:dot_figure="circle"
            custom:dot_color="@android:color/holo_blue_light"
            custom:dot_width="15px"
            custom:repeat_counts="0"
            custom:direction="round"
            />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"    >

    <com.stang.customview.MyView
        android:id="@+id/v2"
        android:layout_marginTop="0dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:layout_gravity="center"
        custom:line_color="@android:color/holo_blue_light"
        custom:line_width="1px"
        custom:speed_animation="130"
        custom:dot_figure="rectangle"
        custom:dot_color="@android:color/holo_orange_dark"
        custom:dot_width="7px"
        custom:repeat_counts="1"
        custom:direction="forward"
        />

    <com.stang.customview.MyView
        android:id="@+id/v4"
        android:layout_marginLeft="20dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:layout_gravity="center"
        custom:line_color="@android:color/holo_blue_light"
        custom:line_width="1px"
        custom:speed_animation="130"
        custom:dot_figure="rectangle"
        custom:dot_color="@android:color/holo_orange_dark"
        custom:dot_width="7px"
        custom:repeat_counts="3"
        custom:direction="round"
        />

    <com.stang.customview.MyView
        android:id="@+id/v5"
        android:layout_marginLeft="20dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:layout_gravity="center"
        custom:line_color="@android:color/holo_blue_light"
        custom:line_width="1px"
        custom:speed_animation="130"
        custom:dot_figure="rectangle"
        custom:dot_color="@android:color/holo_orange_dark"
        custom:dot_width="7px"
        custom:repeat_counts="1"
        custom:direction="backward"
        />

</LinearLayout>


    <com.stang.customview.RectAnimationView
            android:id="@+id/v3"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:padding="10dp"
            custom:rav_line_color="@android:color/holo_orange_light"
            custom:rav_line_width="5px"
            custom:rav_speed_animation="180"
            custom:rav_dot_figure="image"
            custom:rav_dot_color="@android:color/holo_red_dark"
            custom:rav_dot_width="20px"
            custom:rav_repeat_counts="0"
            custom:rav_direction="round"
            />
    

<TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Custom Views" />
</LinearLayout>
